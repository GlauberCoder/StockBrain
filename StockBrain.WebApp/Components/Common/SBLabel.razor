<RadzenText TextStyle="TextStyle.Overline" class="@TitleClass">@Title</RadzenText>
<RadzenText TextStyle="TextStyle.Body1" class="@TextClass"><b>@Text</b></RadzenText>

@code {
	[Parameter]
	public string Title { get; set; }
	[Parameter]
	public string Text { get; set; }
	[Parameter]
	public string TitleClass { get; set; }
	[Parameter]
	public string TextClass { get; set; }
}