@page "/"
@using Radzen.Blazor
@rendermode InteractiveServer

<PageTitle>Portifolios</PageTitle>
<SBLoading IsLoading="@IsLoading">
		<RadzenTabs @bind-SelectedIndex=@selectedIndex >
			<Tabs>
				@foreach (var portifolio in Portfolios)
				{
					<RadzenTabsItem Text="@portifolio.Name">
						<PortfolioDetail Portfolio="@portifolio" />
					</RadzenTabsItem>
				}
			</Tabs>
	</RadzenTabs>
</SBLoading>
@code {
	int selectedIndex = 0;
}